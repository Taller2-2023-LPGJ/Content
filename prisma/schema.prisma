// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model follows {
  followed String @db.VarChar(15)
  follower String @db.VarChar(15)

  @@id([followed, follower])
}

model posts {
  id           Int      @id @default(autoincrement())
  parentId     Int      @default(0)
  author       String   @db.VarChar(15)
  body         String   @db.VarChar(280)
  private      Boolean
  creationDate DateTime 
  editingDate  DateTime?
  blocked      Boolean
}

model postTags {
  postId    Int
  tagId     Int

  @@id([postId, tagId])
}

model tags {
  id      Int     @id @default(autoincrement())
  name    String  @unique
}

model likes {
  username  String      @db.VarChar(15)
  postId    Int
  creation  DateTime
  
  @@id([username, postId])
}

model shares {
  username  String      @db.VarChar(15)
  postId    Int
  creation  DateTime

  @@id([username, postId])
}

model favourites {
  username  String      @db.VarChar(15)
  postId    Int
  creation  DateTime

  @@id([username, postId])
}

model notifications {
  id        Int         @id @default(autoincrement())
  subID     String      @db.VarChar(15)
  postId    Int?
  sender    String     @db.VarChar(15)
  message   String?     @db.VarChar(250)
  type      Int
  creation  DateTime
}